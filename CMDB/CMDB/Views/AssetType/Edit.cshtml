@model CMDB.Domain.Entities.AssetType
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
@if ((bool)ViewData["UpdateAccess"])
{
    <form class="form-horizontal" asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Category <span style="color:red;">*</span></label>
            @Html.DropDownListFor(Model => Model.Category.Id, (IEnumerable<SelectListItem>)ViewBag.Catgories, "Please select", new { @class = "form-control", disabled = "disabled" })
            <span class="text-danger field-validation-valid" asp-validation-for="Category" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group">
            <label asp-for="Vendor" class="control-label">Vendor <span style="color:red;">*</span></label>
            <input asp-for="Vendor" class="form-control" placeholder="vendor">
            <span class="text-danger field-validation-valid" asp-validation-for="Vendor" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="control-label">Type <span style="color:red;">*</span></label>
            <input asp-for="Type" class="form-control" placeholder="vendor">
            <span class="text-danger field-validation-valid" asp-validation-for="Type" data-valmsg-replace="true"></span>
        </div>
        <input type="hidden" name="form-submitted" value="1" /><br>
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Edit</button>
            <a class="btn" asp-area="" asp-controller="AssetType" asp-action="Index"><i class="@ViewBag.BackIcon"></i> Back</a>
        </div>
        <div class="form-group">
            <span class="text-muted"><em><span style="color:red;">*</span> Indicates required field</em></span>
        </div>
    </form>
}
else
{
    <p>You do not access to this page</p>
}