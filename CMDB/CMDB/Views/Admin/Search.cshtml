@model IEnumerable<CMDB.Domain.Entities.Admin>
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<partial name="_Search" />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Account.UserID)</th>
                <th>@Html.DisplayNameFor(model => model.Level)</th>
                <th>@Html.DisplayNameFor(model => model.Active)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Account.UserID)</td>
                    <td>@Html.DisplayFor(modelItem => item.Level)</td>
                    <td>@Html.DisplayFor(modelItem => item.Active)</td>
                    <td>
                        @if (item.AdminId > 1)
                        {
                            @if ((bool)ViewData["UpdateAccess"])
                            {
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AdminId" data-toggle="tooltip" data-placement="top" title="Edit"><span class="@ViewBag.EditIcon"></span></a>
                            }
                            @if (item.Active == "Active" && (bool)ViewData["DeleteAccess"])
                            {
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AdminId" data-toggle="tooltip" data-placement="top" title="Deactivate"><span class="@ViewBag.DeactivateIcon"></span></a>
                            }
                            else if ((bool)ViewData["ActiveAccess"])
                            {
                                <a class="btn btn-glyphicon" asp-action="Activate" asp-route-id="@item.AdminId" data-toggle="tooltip" data-placement="top" title="Activate"><span class="@ViewBag.ActivateIcon"></span></a>
                            }
                        }
                        @if ((bool)ViewData["InfoAccess"])
                        {
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.AdminId" data-toggle="tooltip" data-placement="top" title="Info"><span class="@ViewBag.InfoIcon"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">No rows returned with the search criteria: "@ViewData["search"]"</div>
}