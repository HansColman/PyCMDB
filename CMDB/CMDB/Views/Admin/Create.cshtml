@model CMDB.API.Models.AdminDTO;
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
@if ((bool)ViewData["AddAccess"])
{
    <form class="form-horizontal" action="@ViewData["Controller"]" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Account <span style="color:red;">*</span></label>
            @Html.DropDownListFor(Model => Model.Account, (IEnumerable<SelectListItem>)ViewBag.Accounts, "Please select", new { @class = "form-control" })
            <span class="text-danger field-validation-valid" asp-validation-for="Account" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Level <span style="color:red;">*</span></label>
            @Html.DropDownListFor(Model => Model.Level, (IEnumerable<SelectListItem>)ViewBag.Levels, "Please select", new { @class = "form-control" })
            <span class="text-danger field-validation-valid" asp-validation-for="Level" data-valmsg-replace="true"></span>
        </div>
        <input type="hidden" name="form-submitted" value="1" /><br>
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Create</button>
            <a class="btn" asp-area="" asp-controller="Admin" asp-action="Index"><i class="@ViewBag.BackIcon"></i> Back</a>
        </div>
        <div class="form-group">
            <span class="text-muted"><em><span style="color:red;">*</span> Indicates required field</em></span>
        </div>
    </form>
}
else
{
    <p>You do not access to this page</p>
}