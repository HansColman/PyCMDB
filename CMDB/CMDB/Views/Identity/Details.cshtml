@model IEnumerable<CMDB.Models.Identity>
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>UserID</th>
            <th>E Mail</th>
            <th>Language</th>
            <th>Type</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayTextFor(modelItem => item.Name)</td>
                <td>@Html.DisplayTextFor(modelItem => item.UserID)</td>
                <td>@Html.DisplayTextFor(modelItem => item.EMail)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Language)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Type.Description)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Active)</td>
            </tr>
        }
    </tbody>
</table>
@foreach (var item in Model)
{
    <H3>Account overview</H3>
    if (item.Accounts.Count > 0)
    {

    }
    else
    {
        <p>No Account assigned to this Identity</p>
    }
    <H3>Device overview</H3>
    if (item.Devices.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Category</th>
                    <th>Type</th>
                    <th>AssetTag</th>
                    <th>SerialNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Device device in item.Devices)
                {
                    <tr>
                        <td class="small">@device.Category</td>";
                        <td class="small">@device.Type.Vendor+" "+@device.Type.Type</td>";
                        <td class="small">@device.AssetTag</td>";
                        <td class="small">@device.SerialNumber</td>";
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Devices assigned to this Identity</p>
    }
    <H3>Log overview</H3>
    if (item.Logs.Count > 0)
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Date</th>
                    <th>Text</th>
                </tr>
            </thead>
            <tbody>
            @foreach (Log log in item.Logs)
            {
                <tr>
                    <td>@log.LogDate</td>
                    <td>@log.LogText</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No logs for to this Identity</p>
    }
}
