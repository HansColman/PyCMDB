@model IEnumerable<CMDB.Models.Identity>
@{
    Layout = "_Layout";
}
@if ((bool)ViewData["InfoAccess"])
{
    <h2>@ViewData["Title"] <a class="btn btn-default float-right" asp-area="" asp-controller="Identity" asp-action="Index"><i class="fa fa-arrow-left"></i> Back</a></h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>UserID</th>
                <th>E Mail</th>
                <th>Language</th>
                <th>Type</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayTextFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.UserID)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.EMail)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.Language)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.Type.Description)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.Active)</td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_AddNew"/>
    @foreach (var item in Model)
    {
        @if ((bool)ViewData["AssignDevice"] && item.IdenID > 1)
        {
            <a class="btn icon-btn btn-success" asp-action="AssignDevice" asp-route-id="@item.IdenID" data-toggle="tooltip" data-placement="top" title="Assign Device" id="AssignDevice"><span class="fa fa-laptop"></span></a>
        }
        @if ((bool)ViewData["AssignAccount"])
        {
            <a class="btn icon-btn btn-success" asp-action="AssignAccount" asp-route-id="@item.IdenID" data-toggle="tooltip" data-placement="top" title="Assign Account" id="AssignAccount"><span class="fa fa-user-plus"></span></a>
        }
        @if ((bool)ViewData["AccountOverview"])
        {
            <H3>Account overview</H3>
            @if (item.Accounts.Count > 0)
            {
                <table class="table table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>UserID</th>
                            <th>Application</th>
                            <th>From</th>
                            <th>Until</th>
                            @if ((bool)ViewData["ReleaseAccount"] && item.IdenID > 1)
                            {
                                <th>Action</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (IdenAccount idenAccount in item.Accounts)
                        {
                        <tr>
                            <td class="small">@idenAccount.Account.UserID</td>
                            <td class="small">@idenAccount.Account.Application.Name</td>
                            <td class="small">@idenAccount.ValidFrom.ToString(ViewData["DateFormat"].ToString())</td>
                            <td class="small">@idenAccount.ValidUntil.ToString(ViewData["DateFormat"].ToString())</td>
                            @if ((bool)ViewData["ReleaseAccount"] && item.IdenID > 1)
                            {
                                @if (idenAccount.ValidUntil >= DateTime.Now && (DateTime.Now-idenAccount.ValidFrom).TotalDays >=1)
                                {
                                    <td class="small"><a class="btn btn-danger" asp-action="ReleaseAccount" asp-route-id="@idenAccount.ID" id="ReleaseAccount" data-toggle="tooltip" data-placement="top" title="Release Account"><span class="fa fa-user-minus"></span></a></td>
                                }
                                else
                                {
                                    <td class="small"></td>
                                }
                            }
                        </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Accounts assigned to this Identity</p>
            }
        }
        @if ((bool)ViewData["DeviceOverview"])
        {
            <H3>Device overview</H3>
            if (item.Devices.Count > 0)
            {
                <table class="table table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>Category</th>
                            <th>Type</th>
                            <th>AssetTag</th>
                            <th>SerialNumber</th>
                            @if ((bool)ViewData["ReleaseDevice"] && item.IdenID > 1)
                            {
                                <th>Action</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Device device in item.Devices)
                        {
                            <tr>
                                <td class="small">@device.Category</td>";
                                <td class="small">@device.Type.Vendor+" "+@device.Type.Type</td>";
                                <td class="small">@device.AssetTag</td>";
                                <td class="small">@device.SerialNumber</td>";
                                @if ((bool)ViewData["ReleaseDevice"] && item.IdenID > 1)
                                {
                                    <td class="small"><a class="btn btn-danger" href="/Identity/ReleaseDevice&id=@item.IdenID&AssetTag=@device.AssetTag" id="ReleaseDevice" data-toggle="tooltip" data-placement="top" title="Release"></a></td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No Devices assigned to this Identity</p>
            }
        }
        <H3>Log overview</H3>
        @if (item.Logs.Count > 0)
        {
            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>Date</th>
                        <th>Text</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Log log in item.Logs)
                    {
                        <tr>
                            <td>@log.LogDate.ToString(ViewData["LogDateFormat"].ToString())</td>
                            <td>@log.LogText</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No logs for to this Identity</p>
        }
    }
}
else
{
    <p>You do not access to this page</p>
}