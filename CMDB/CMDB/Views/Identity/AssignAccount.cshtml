@model IEnumerable<CMDB.Models.Identity>
@{
    Layout = "_Layout";
}
@if ((bool)ViewData["AssignAccount"])
{
    <h2>@ViewData["Title"]</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>UserID</th>
                <th>E Mail</th>
                <th>Language</th>
                <th>Type</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayTextFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.UserID)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.EMail)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.Language)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.Type.Description)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.Active)</td>
                </tr>
            }
        </tbody>
    </table>
    <p></p>
    <form role="form" class="form-horizontal" action="/Identity/AssignAccount" method="post">
        <div class="form-group">
            <label for="account">Account</label>
            <select name="account" id="account" class="form-control" asp-items="@ViewBag.Accounts" required>
                <option value=""></option>
            </select>
        </div>
        <div class="form-group has-feedback">
            <label class="control-label">From</label>
            <imput type="text" class="form-control" placeholder="DD/MM/YYYY" name="start" id="start-date" required\>
                <i class="glyphicon glyphicon-calendar form-control-feedback"></i>
        </div>
        <div class="form-group has-feedback">
            <label class="control-label">Until</label>
            <imput type="text" class="form-control" placeholder="DD/MM/YYYY" name="end" id="end-date" \>
                <i class="glyphicon glyphicon-calendar form-control-feedback"></i>
        </div>
        <input type="hidden" name="form-submitted" value="1" />
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Assign</button>
            <a class="btn" asp-area="" asp-controller="Identity" asp-action="Index"><i class="fa fa-arrow-left"></i> Back</a>
        </div>
    </form>
    <script>
        $('#start-date').datepicker({
            weekStartDay: 1,
            format: 'dd-mm-yyyy'
        });
        $('#end-date').datepicker({
            weekStartDay: 1,
            format: 'dd-mm-yyyy'
        });
    </script>
}
else
{
    <p>You do not access to this page</p>
}
