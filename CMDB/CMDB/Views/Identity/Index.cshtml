@model IEnumerable<CMDB.Models.Identity>
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    @if ((bool)ViewData["AddAccess"])
    {
        <div class="col-md-6 text-left">
            <a class="btn icon-btn btn-success" asp-action="Create"><span class="fas fa-plus"></span> Add</a>
        </div>
    }
    <partial name="_Search" />
</div>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>UserID</th>
            <th>E Mail</th>
            <th>Language</th>
            <th>Type</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayTextFor(modelItem => item.Name)</td>
                <td>@Html.DisplayTextFor(modelItem => item.UserID)</td>
                <td>@Html.DisplayTextFor(modelItem => item.EMail)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Language)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Type.Description)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Active)</td>
                <td>
                    @if (item.IdenID > 1)
                    {
                        @if ((bool)ViewData["UpdateAccess"])
                        {
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdenID" data-toggle="tooltip" data-placement="top" title="Edit"><span class="fa fa-pencil"></span></a>
                        }
                        @if (item.Active == "Active" && (bool)ViewData["DeleteAccess"])
                        {
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdenID" data-toggle="tooltip" data-placement="top" title="Deactivate"><span class="fas fa-trash-alt"></span></a>
                        }
                        else if ((bool)ViewData["ActiveAccess"])
                        {
                            <a class="btn btn-glyphicon" asp-action="Activate" asp-route-id="@item.IdenID" data-toggle="tooltip" data-placement="top" title="Activate"><span class="fas fa-plus-circle"></span></a>
                        }
                        @if (item.Active == "Active" && (bool)ViewData["AssignDeviceAccess"])
                        {
                            <a class="btn btn-success" asp-action="AssignDevice" asp-route-id="@item.IdenID" data-toggle="tooltip" data-placement="top" title="Assign Device"><span class="fa fa-laptop"></span></a>
                        }
                        @if (item.Active == "Active" && (bool)ViewData["AssignAccountAccess"])
                        {
                            <a class="btn btn-success" asp-action="AssignAccount" asp-route-id="@item.IdenID" data-toggle="tooltip" data-placement="top" title="Assign Account"><span class="fa fa-user-plus"></span></a>
                        }
                    }
                    @if ((bool)ViewData["InfoAccess"])
                    {
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdenID" data-toggle="tooltip" data-placement="top" title="Info"><span class="fa fa-info"></span></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>