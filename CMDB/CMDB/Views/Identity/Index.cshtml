@model  IEnumerable<CMDB.Models.Identity>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Identity";
    bool UpdateAccess = true;
    bool ActiveAccess = true;
    bool InfoAccess = true;
    bool DeleteAccess = true;
}
<h2>@ViewData["Title"]</h2>
<div class="col-md-6 text-left">
    <a class="btn icon-btn btn-success" asp-action="Create"><span class="fas fa-plus"></span> Add</a>
</div>
<table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>UserID</th>
                <th>E Mail</th>
                <th>Language</th>
                <th>Type</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayTextFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.UserID)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.EMail)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.Language)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.Type.Description)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.Active)</td>
                    <td>
                        @if (item.IdenID > 1)
                        {
                            @if (UpdateAccess)
                            {
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdenID">Edit</a>
                            }
                            @if (item.Active == "Active" && DeleteAccess)
                            {
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdenID">Delete</a>
                            }
                            else if (ActiveAccess)
                            {

                            }
                        }
                        @if (InfoAccess)
                        {
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdenID"><span class="fa fa-info"></span></a>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
