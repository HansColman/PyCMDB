@{
    Layout = "_Layout";
    CMDB.API.Models.IdentityDTO identity = (CMDB.API.Models.IdentityDTO)ViewBag.Identity;
    CMDB.API.Models.AccountDTO account = (CMDB.API.Models.AccountDTO)ViewBag.Account;
}
@if ((bool)ViewData["ReleaseAccount"])
{
    <h2>@ViewData["Title"]</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>UserID</th>
                <th>E Mail</th>
                <th>Language</th>
                <th>Type</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="Name">@identity.Name</td>
                <td id="UserId">@identity.UserID</td>
                <td id="EMail">@identity.EMail</td>
                <td id="Language">@identity.Language.Description</td>
                <td id="Type">@identity.Type.Description</td>
                <td id="State">@identity.State</td>
            </tr>
        </tbody>
    </table>
    <H3>Account information that will be released</H3>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>UserID</th>
                <th>Type</th>
                <th>Application</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@account.UserID</td>
                <td>@account.Type.Type</td>
                <td>@account.Application.Name</td>
                <td>@account.State</td>
            </tr>
        </tbody>
    </table>
    <partial name="_SignForm" />
}
else
{
    <p>You do not access to this page</p>
}
