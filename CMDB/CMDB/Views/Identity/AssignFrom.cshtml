@model IEnumerable<CMDB.Domain.Entities.Identity>
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>UserID</th>
            <th>E Mail</th>
            <th>Language</th>
            <th>Type</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayTextFor(modelItem => item.Name)</td>
                <td>@Html.DisplayTextFor(modelItem => item.UserID)</td>
                <td>@Html.DisplayTextFor(modelItem => item.EMail)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Language)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Type.Description)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Active)</td>
            </tr>
        }
    </tbody>
</table>
@foreach (var item in Model)
{
    @if (item.Accounts.Count > 0)
    {
        <H3>Account overview</H3>
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>UserID</th>
                    <th>Application</th>
                    <th>From</th>
                    <th>Until</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CMDB.Domain.Entities.IdenAccount idenAccount in item.Accounts)
                {
                    <tr>
                        <td class="small">@idenAccount.Account.UserID</td>
                        <td class="small">@idenAccount.Account.Application.Name</td>
                        <td class="small">@idenAccount.ValidFrom.ToString(ViewData["DateFormat"].ToString())</td>
                        <td class="small">@idenAccount.ValidUntil.ToString(ViewData["DateFormat"].ToString())</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    if (item.Laptops.Count > 0)
    {
        <H3>Laptop overview</H3>
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Category</th>
                    <th>Type</th>
                    <th>AssetTag</th>
                    <th>SerialNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CMDB.Domain.Entities.Device device in item.Laptops)
                {
                    <tr>
                        <td class="small">@device.Category</td>";
                        <td class="small">@device.Type.Vendor+" "+@device.Type.Type</td>";
                        <td class="small">@device.AssetTag</td>";
                        <td class="small">@device.SerialNumber</td>";
                    </tr>
                }
            </tbody>
        </table>
    }
    if (item.Desktops.Count > 0)
    {
        <H3>Desktop overview</H3>
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Category</th>
                    <th>Type</th>
                    <th>AssetTag</th>
                    <th>SerialNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CMDB.Domain.Entities.Device device in item.Desktops)
                {
                    <tr>
                        <td class="small">@device.Category</td>";
                        <td class="small">@device.Type.Vendor+" "+@device.Type.Type</td>";
                        <td class="small">@device.AssetTag</td>";
                        <td class="small">@device.SerialNumber</td>";
                    </tr>
                }
            </tbody>
        </table>
    }
    if (item.Screens.Count > 0)
    {
        <H3>Screen overview</H3>
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Category</th>
                    <th>Type</th>
                    <th>AssetTag</th>
                    <th>SerialNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CMDB.Domain.Entities.Device device in item.Screens)
                {
                    <tr>
                        <td class="small">@device.Category</td>";
                        <td class="small">@device.Type.Vendor+" "+@device.Type.Type</td>";
                        <td class="small">@device.AssetTag</td>";
                        <td class="small">@device.SerialNumber</td>";
                    </tr>
                }
            </tbody>
        </table>
    }
    if (item.Dockings.Count > 0)
    {
        <H3>Docking station overview</H3>
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Category</th>
                    <th>Type</th>
                    <th>AssetTag</th>
                    <th>SerialNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CMDB.Domain.Entities.Device device in item.Dockings)
                {
                    <tr>
                        <td class="small">@device.Category</td>";
                        <td class="small">@device.Type.Vendor+" "+@device.Type.Type</td>";
                        <td class="small">@device.AssetTag</td>";
                        <td class="small">@device.SerialNumber</td>";
                    </tr>
                }
            </tbody>
        </table>
    }
    if (item.Tokens.Count > 0)
    {
        <H3>Token overview</H3>
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Category</th>
                    <th>Type</th>
                    <th>AssetTag</th>
                    <th>SerialNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CMDB.Domain.Entities.Device device in item.Tokens)
                {
                    <tr>
                        <td class="small">@device.Category</td>";
                        <td class="small">@device.Type.Vendor+" "+@device.Type.Type</td>";
                        <td class="small">@device.AssetTag</td>";
                        <td class="small">@device.SerialNumber</td>";
                    </tr>
                }
            </tbody>
        </table>
    }
    if (item.Mobiles.Count > 0)
    {
        <H3>Mobile overview</H3>
        <table class="table table-striped table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>Category</th>
                    <th>Type</th>
                    <th>SerialNumber</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CMDB.Domain.Entities.Mobile device in item.Mobiles)
                {
                    <tr>
                        <td class="small">@device.Category</td>";
                        <td class="small">@device.MobileType.Vendor+" "+@device.MobileType.Type</td>";
                        <td class="small">@device.IMEI</td>";
                    </tr>
                }
            </tbody>
        </table>
    }
}
