@model CMDB.Domain.Entities.Subscription
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
@if ((bool)ViewData["UpdateAccess"])
{
    <form class="form-horizontal" asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Type <span style="color:red;">*</span></label>
            @Html.DropDownListFor(Model => Model.SubscriptionType.Id, (IEnumerable<SelectListItem>)ViewBag.Types, "Please select", new { @class = "form-control", @disabled = "disabled" })
            <span class="text-danger field-validation-valid" asp-validation-for="SubscriptionType" data-valmsg-replace="true"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="PhoneNumber">Phone number </label>
            <input name="PhoneNumber" type="text" class="form-control" placeholder="PhoneNumber" asp-for="PhoneNumber">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <input type="hidden" name="form-submitted" value="1" /><br>
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Edit</button>
            <a class="btn" asp-area="" asp-controller="Subscription" asp-action="Index"><i class="@ViewBag.BackIcon"></i> Back</a>
        </div>
        <div class="form-group">
            <span class="text-muted"><em><span style="color:red;">*</span> Indicates required field</em></span>
        </div>
    </form>
}
else
{
    <p>You do not access to this page</p>
}