@model CMDB.API.Models.SubscriptionDTO
@{
    Layout = "_Layout";
}
@if ((bool)ViewData["ReleaseMobile"])
{
    <h2>@ViewData["Title"]</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Type</th>
                <th>Phone number</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="SubscriptionType">@Html.DisplayTextFor(model => model.SubscriptionType)</td>
                <td id="Phone">@Html.DisplayTextFor(model => model.PhoneNumber)</td>
                <td id="Active">@Html.DisplayTextFor(model => model.State)</td>
            </tr>
        </tbody>
    </table>
    <H3>Mobile information that will be released</H3>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>IMEI</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="IMEI">@Model.Mobile.IMEI</td>
                <td id="Type">@Model.Mobile.MobileType.Vendor @Model.Mobile.MobileType.Type</td>
            </tr>
        </tbody>
    </table>
    <partial name="_SignForm" />
}
else
{
    <p>You do not access to this page</p>
}
