@using CMDB.Domain.DTOs
@model SubscriptionDTO
@{
    Layout = "_Layout";
}
@if ((bool)ViewData["ReleaseIdentity"])
{
    <h2>@ViewData["Title"]</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Type</th>
                <th>Phone number</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="SubscriptionType">@Html.DisplayTextFor(model => model.SubscriptionType)</td>
                <td id="Phone">@Html.DisplayTextFor(model => model.PhoneNumber)</td>
                <td id="Active">@Html.DisplayTextFor(model => model.State)</td>
            </tr>
        </tbody>
    </table>
    <H3>Identity information that will be released</H3>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>UserID</th>
                <th>E Mail</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="IdentityName">@Model.Identity.Name</td>
                <td id="IdentityUserId">@Model.Identity.UserID</td>
                <td id="IdentityEMail">@Model.Identity.EMail</td>
            </tr>
        </tbody>
    </table>
    <partial name="_SignForm" />
}
else
{
    <p>You do not access to this page</p>
}
