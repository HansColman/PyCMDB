@model IEnumerable<CMDB.API.Models.SubscriptionDTO>
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<partial name="_Search" />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Category</th>
                <th>Type</th>
                <th>Phone number</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayTextFor(modelItem => item.SubscriptionType.AssetCategory.Category)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.SubscriptionType)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayTextFor(modelItem => item.State)</td>
                    <td>
                        @if ((bool)ViewData["UpdateAccess"])
                        {
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.SubscriptionId" data-toggle="tooltip" data-placement="top" title="Edit"><span class="@ViewBag.EditIcon"></span></a>
                        }
                        @if (item.Active == 1 && (bool)ViewData["DeleteAccess"])
                        {
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SubscriptionId" data-toggle="tooltip" data-placement="top" title="Deactivate"><span class="@ViewBag.DeactivateIcon"></span></a>
                        }
                        else if ((bool)ViewData["ActiveAccess"])
                        {
                            <a class="btn btn-glyphicon" href="\Subscription\Activate\@item.SubscriptionId" data-toggle="tooltip" data-placement="top" title="Activate"><span class="@ViewBag.ActivateIcon"></span></a>
                        }
                        @if (item.Active == 1 && item.SubscriptionType.AssetCategory.Category == "Mobile Subscription" && (bool)ViewData["AssignMobile"])
                        {
                            <a class="btn btn-success" href="\Subscription\AssignMobile\@item.SubscriptionId" data-toggle="tooltip" data-placement="top" title="AssignMobile"><span class="@ViewBag.AddDeviceIcon"></span></a>
                        }
                        @if (item.Active == 1 && item.SubscriptionType.AssetCategory.Category == "Internet Subscription" && (bool)ViewData["AssignIdentity"])
                        {
                            <a class="btn btn-success" href="\Subscription\AssignIdentity\@item.SubscriptionId" data-toggle="tooltip" data-placement="top" title="AssignIdentity"><span class="@ViewBag.AddIdentityIcon"></span></a>
                        }
                        @if ((bool)ViewData["InfoAccess"])
                        {
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.SubscriptionId" data-toggle="tooltip" data-placement="top" title="Info"><span class="@ViewBag.InfoIcon"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">No rows returned with the search criteria: "@ViewData["search"]"</div>
}