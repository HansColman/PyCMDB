<div class="row">
    @if ((bool)ViewData["AddAccess"])
    {
        <div class="col-md-6 text-left">
            <a class="btn icon-btn btn-success" asp-action="Create"><span class="fas fa-plus"></span> Add</a>
        </div>
    }
    <div class="col-md-6 text-right">
        <form class="form-inline float-right" role="search" action="@ViewData["actionUrl"]" method="post">
            <div class="form-group">
                <input name="search" type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default"><i class="fas fa-search"></i></button>
        </form>
    </div>
</div>