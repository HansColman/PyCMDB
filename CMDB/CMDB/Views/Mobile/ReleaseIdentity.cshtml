@using CMDB.Domain.DTOs
@model MobileDTO
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
@if ((bool)ViewData["ReleaseIdentity"]){
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IMEI)</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="AssetTag">@Html.DisplayFor(model => model.IMEI)</td>
                <td id="AssetType">@Html.DisplayFor(model => model.MobileType.Vendor) @Html.DisplayFor(model => model.MobileType.Type)</td>
            </tr>
        </tbody>
    </table>
    <H3>Identity information that will be released</H3>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>UserID</th>
                <th>E Mail</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="IdentityName">@Model.Identity.Name</td>
                <td id="IdentityUserId">@Model.Identity.UserID</td>
                <td id="IdentityEMail">@Model.Identity.EMail</td>
            </tr>
        </tbody>
    </table>
    <partial name="_SignForm" />
}
else
{
    <p>You do not access to this page</p>
}