@model IEnumerable<CMDB.API.Models.MobileDTO>
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<partial name="_Search" />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IMEI)</th>
                <th>Type</th>
                <th>Ussage</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IMEI)</td>
                    <td>@Html.DisplayFor(modelItem => item.MobileType.Vendor) @Html.DisplayFor(modelItem => item.MobileType.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.Identity.Name)</td>
                    <td>
                        @if ((bool)ViewData["UpdateAccess"])
                        {
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.MobileId" data-toggle="tooltip" data-placement="top" title="Edit"><span class="@ViewBag.EditIcon"></span></a>
                        }
                        @if (item.Active == 1 && (bool)ViewData["DeleteAccess"])
                        {
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.MobileId" data-toggle="tooltip" data-placement="top" title="Deactivate"><span class="@ViewBag.DeactivateIcon"></span></a>
                        }
                        else if ((bool)ViewData["ActiveAccess"])
                        {
                            <a class="btn btn-glyphicon" href="\Mobile\Activate\@item.MobileId" data-toggle="tooltip" data-placement="top" title="Activate"><span class="@ViewBag.ActivateIcon"></span></a>
                        }
                        @if (item.Active == 1 && (item.Identity is null || item.Identity.IdenId == 1) && (bool)ViewData["AssignIdentity"])
                        {
                            <a class="btn btn-success" href="\Mobile\AssignIdentity\@item.MobileId" data-toggle="tooltip" data-placement="top" title="Assign Identity"><span class="@ViewBag.AddIdentityIcon"></span></a>
                        }
                        @if (item.Active == 1 && (bool)ViewData["AssignSubscription"])
                        {
                            <a class="btn btn-success" href="\Mobile\AssignSubscription\@item.MobileId" data-toggle="tooltip" data-placement="top" title="Assign Subscription"><span class="@ViewBag.SubscriptionIcon"></span></a>
                        }
                        @if ((bool)ViewData["InfoAccess"])
                        {
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.MobileId" data-toggle="tooltip" data-placement="top" title="Info"><span class="@ViewBag.InfoIcon"></span></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger">No rows found, please add a new record</div>
}