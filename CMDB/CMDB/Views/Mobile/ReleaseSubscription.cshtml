@using CMDB.Domain.DTOs
@model MobileDTO
@{
    Layout = "_Layout";
}
@if ((bool)ViewData["ReleaseIdentity"]){
    <h2>@ViewData["Title"]</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IMEI)</th>
                <th>Type</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="AssetTag">@Html.DisplayFor(model => model.IMEI)</td>
                <td id="AssetType">@Html.DisplayFor(model => model.MobileType.Vendor) @Html.DisplayFor(model => model.MobileType.Type)</td>
            </tr>
        </tbody>
    </table>
    <H3>Subscription information that will be released</H3>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Type</th>
                <th>Phonenumber</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="SubscriptionType">@Model.Subscription.SubscriptionType</td>
                <td id="PhoneNumber">@Model.Subscription.PhoneNumber</td>
            </tr>
        </tbody>
    </table>
    <partial name="_SignForm" />
}
else
{
    <p>You do not access to this page</p>
}