@using CMDB.Domain.DTOs
@model DeviceDTO
@{
    Layout =  "_Layout";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.AssetTag)</th>
            <th>@Html.DisplayNameFor(model => model.SerialNumber)</th>
            <th>@Html.DisplayNameFor(model => model.AssetType)</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td id="AssetTag">@Html.DisplayFor(model => model.AssetTag)</td>
            <td id="SerialNumber">@Html.DisplayFor(model => model.SerialNumber)</td>
            <td id="AssetType">@Html.DisplayFor(model => model.AssetType.Vendor) @Html.DisplayFor(model => model.AssetType.Type)</td>
        </tr>
    </tbody>
</table>
<H3>Identity overview</H3>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>UserID</th>
            <th>E Mail</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td id="Name" class="small">@Model.Identity.Name</td>
            <td id="IdenityUserId" class="small">@Model.Identity.UserID</td>
            <td id="EMail" class="small">@Model.Identity.EMail</td>
        </tr>
    </tbody>
</table>
@if(Model.Kensington is not null)
{
    <h3>Kensington overview</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Type</th>
                <th>Serialnumber</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Kensington.Type.Vendor @Model.Kensington.Type.Type</td>
                <td>@Model.Kensington.SerialNumber</td>
            </tr>
        </tbody>
    </table>
}
<partial name="_SignForm" />