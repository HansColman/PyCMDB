@model IEnumerable<CMDB.Domain.Entities.Account>
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<partial name="_Search" />
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>UserID</th>
            <th>Type</th>
            <th>Application</th>
            <th>Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayTextFor(modelItem => item.UserID)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Type.Type) @Html.DisplayTextFor(modelItem => item.Type.Description)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Application.Name)</td>
                <td>@Html.DisplayTextFor(modelItem => item.Active)</td>
                <td>
                    @if (item.AccID > 1)
                    {
                        @if ((bool)ViewData["UpdateAccess"])
                        {
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AccID" data-toggle="tooltip" data-placement="top" title="Edit"><span class="@ViewBag.EditIcon"></span></a>
                        }
                        @if (item.Active == CMDB.Domain.Entities.State.Active && (bool)ViewData["DeleteAccess"])
                        {
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AccID" data-toggle="tooltip" data-placement="top" title="Deactivate"><span class="@ViewBag.DeactivateIcon"></span></a>
                        }
                        else if ((bool)ViewData["ActiveAccess"])
                        {
                            <a class="btn btn-glyphicon" asp-action="Activate" asp-route-id="@item.AccID" data-toggle="tooltip" data-placement="top" title="Activate"><span class="@ViewBag.ActivateIcon"></span></a>
                        }
                        @if (item.Active == CMDB.Domain.Entities.State.Active && (bool)ViewData["AssignIdentity"])
                        {
                            <a class="btn btn-success" asp-action="AssignIdentity" asp-route-id="@item.AccID" data-toggle="tooltip" data-placement="top" title="Assign Identity"><span class="@ViewBag.AddIdentityIcon"></span></a>
                        }
                    }
                    @if ((bool)ViewData["InfoAccess"])
                    {
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.AccID" data-toggle="tooltip" data-placement="top" title="Info"><span class="@ViewBag.InfoIcon"></span></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>