@model CMDB.API.Models.AccountDTO
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>UserID</th>
            <th>Type</th>
            <th>Application</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td id="UserId">@Html.DisplayTextFor(modelItem => modelItem.UserID)</td>
            <td id="Type">@Html.DisplayTextFor(modelItem => modelItem.Type.Type)</td>
            <td id="Application">@Html.DisplayTextFor(modelItem => modelItem.Application.Name)</td>
            <td id="Active">@Html.DisplayTextFor(modelItem => modelItem.Active)</td>
        </tr>
    </tbody>
</table>
<H3>Identity overview</H3>
@if (Model.Identities.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>UserID</th>
                <th>E Mail</th>
                <th>Language</th>
                <th>Type</th>
                <th>From</th>
                <th>Until</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CMDB.API.Models.IdenAccountDTO idenAccount in Model.Identities)
            {
                <tr>
                    <td id="Name" class="small">@idenAccount.Identity.Name</td>
                    <td id="IdenityUserId" class="small">@idenAccount.Identity.UserID</td>
                    <td id="EMail" class="small">@idenAccount.Identity.EMail</td>
                    <td id="Language" class="small">@idenAccount.Identity.Language.Description</td>
                    <td id="IdentityType" class="small">@idenAccount.Identity.Type.Type</td>
                    <td id="ValidFrom" class="small">@idenAccount.ValidFrom.ToString(ViewData["DateFormat"].ToString())</td>
                    <td id="ValidUntil" class="small">@idenAccount.ValidUntil.ToString(ViewData["DateFormat"].ToString())</td>
                </tr>
            }
        </tbody>
    </table>
}
<partial name="_SignForm" />