@using CMDB.Domain.DTOs
@model KensingtonDTO
@{
    Layout = "_Layout";
}
<h2>@ViewData["Title"]</h2>
<table class="table table-striped table-bordered">
<thead class="thead-light">
    <tr>
        <th>Name</th>
        <th>UserID</th>
        <th>E Mail</th>
        <th>Language</th>
        <th>Type</th>
        <th>State</th>
    </tr>
</thead>
<tbody>
    <tr>
        <td>@Html.DisplayTextFor(item => item.Device.Identity.Name)</td>
        <td>@Html.DisplayFor(item => item.Device.Identity.UserID)</td>
        <td>@Html.DisplayFor(item => item.Device.Identity.EMail)</td>
        <td>@Html.DisplayFor(item => item.Device.Identity.Language.Description)</td>
        <td>@Html.DisplayFor(item => item.Device.Identity.Type.Description)</td>
        <td>@Html.DisplayFor(item => item.Device.Identity.State)</td>
</tr>
</tbody>
</table>
<h3>Kensingtong overview</h3>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.SerialNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Type)</th>
            <th>@Html.DisplayNameFor(m => m.AmountOfKeys)</th>
            <th>Assigned @Html.DisplayNameFor(m => m.Device)</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td id="SerialNumber">@Html.DisplayFor(model => model.SerialNumber)</td>
            <td id="AssetType">@Html.DisplayFor(model => model.Type.Vendor) @Html.DisplayFor(model => model.Type.Type)</td>
            <td id="AssetType">@Html.DisplayFor(model => model.AmountOfKeys)</td>
            <td id="AssetType">@Html.DisplayFor(model => model.Device.AssetType.AssetCategory.Category) @Html.DisplayFor(model => model.Device.AssetType.Vendor) @Html.DisplayFor(model => model.Device.AssetType.Type) AssetTag:@Html.DisplayFor(model => model.Device.AssetTag)</td>
        </tr>
    </tbody>
</table>
<partial name="_SignForm" />