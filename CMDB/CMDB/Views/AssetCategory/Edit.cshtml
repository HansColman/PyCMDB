@using CMDB.Domain.DTOs
@model AssetCategoryDTO;
@{
    Layout = "_Layout";
}
@if ((bool)ViewData["UpdateAccess"])
{
    <h2>@ViewData["Title"]</h2>
    <form action="@ViewData["Controller"]" class="form-horizontal" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Category" class="control-label">Category <span style="color:red;">*</span></label>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger field-validation-valid"></span>
        </div>
        <div class="form-group">
            <label asp-for="Prefix" class="control-label">Prefix</label>
            <input asp-for="Prefix" class="form-control" />
            <span asp-validation-for="Prefix" class="text-danger field-validation-valid"></span>
        </div>
        <input type="hidden" name="form-submitted" value="1" /><br>
        <div class="form-actions">
            <button type="submit" class="btn btn-success">Edit</button>
            <a class="btn" asp-area="" asp-controller="AssetCategory" asp-action="Index"><i class="@ViewBag.BackIcon"></i> Back</a>
        </div>
        <div class="form-group">
            <span class="text-muted"><em><span style="color:red;">*</span> Indicates required field</em></span>
        </div>
    </form>
}
else
{
    <p>You do not access to this page</p>
}